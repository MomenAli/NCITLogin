<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="edit_text" parent="TextAppearance.AppCompat">
        <item name="android:paddingStart">@dimen/medium</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/medium</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Text_Header" parent="fullScreen">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text_Header2" parent="fullScreen">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text_btn" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>